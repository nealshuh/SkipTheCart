{
  "manifest_version": 2,
  "name": "SkipTheCart",
  "version": "1.0",
  "description": "Extracts and displays images from your shopping cart",
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://www.zara.com/*",
    "*://www.hm.com/*",
    "*://www2.hm.com/*",
    "*://www.aritzia.com/*",
    "*://edikted.com/*",
    "*://www.abercrombie.com/*",
    "*://us.princesspolly.com/*",
    "*://www.revolve.com/*",
    "*://tigermist.com/*",
    "*://us.ohpolly.com/*",
    "*://www.fashionnova.com/*",
    "*://www.urbanoutfitters.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.zara.com/*",
        "*://www.hm.com/*",
        "*://www2.hm.com/*",
        "*://www.aritzia.com/*",
        "*://edikted.com/*",
        "*://www.abercrombie.com/*",
        "*://us.princesspolly.com/*",
        "*://www.revolve.com/*",
        "*://tigermist.com/*",
        "*://us.ohpolly.com/*",
        "*://www.fashionnova.com/*",
        "*://www.urbanoutfitters.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_title": "SkipTheCart"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
