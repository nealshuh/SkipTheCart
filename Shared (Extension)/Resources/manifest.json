{
  "manifest_version": 3,
  "name": "PursePause for Aritzia",
  "version": "1.0",
  "description": "Extracts and displays images from your Aritzia shopping bag",
  "permissions": ["activeTab"],
  "host_permissions": ["*://www.aritzia.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.aritzia.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_title": "PursePause for Aritzia"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
