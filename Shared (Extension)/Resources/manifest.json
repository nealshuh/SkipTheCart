{
    "manifest_version": 2,
    "name": "Wardrobe Extension",
    "version": "1.0",
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
      "*://www.zara.com/*",
      "*://www.hm.com/*",
      "*://www2.hm.com/*",
      "*://www.aritzia.com/*",
      "*://edikted.com/*",
      "*://www.abercrombie.com/*",
      "*://us.princesspolly.com/*",
      "*://www.revolve.com/*",
      "*://tigermist.com/*",
      "*://us.ohpolly.com/*",
      "*://www.fashionnova.com/*",
      "*://www.urbanoutfitters.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Open Wardrobe"
    },
    "content_scripts": [
        {
            "matches": ["*://*.zara.com/*", "*://*.hm.com/*", "*://*.aritzia.com/*", "*://*.abercrombie.com/*", "*://*.edikted.com/*", "*://*.princesspolly.com/*", "*://*.revolve.com/*", "*://*.ohpolly.com/*", "*://*.fashionnova.com/*", "*://*.urbanoutfitters.com/*", "*://*.brandymelville.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
      "default_title": "SkipTheCart"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
}
